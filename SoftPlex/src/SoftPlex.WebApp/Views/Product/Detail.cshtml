@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SoftPlex.Contracts
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SoftPlex.Contracts.Response
@model SoftPlex.Contracts.Response.ResponseProduct

@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}

<h2>title</h2>

<style>
	table th,
	table td {
		border: 1px solid #000;
	}

	.product_versions_block {
		padding: 15px;
		border: 1px solid #000;
	}
</style>
<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>ProductVersions</th>
		@{
			if (User.Identity.IsAuthenticated)
			{
				<th>Actions</th>
			}
		}
	</tr>

	@{
		List<ResponseProduct> item = new List<ResponseProduct>();
		item.Add(Model);
	}
	<partial name="_ResponseProduct" model="item" />
		

</table>