<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftPlex.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoftPlex.WebApp.styles.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="~/vendor/jquery-ui.css" asp-append-version="true" />
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SoftPlex.WebApp</a>
	            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
	                    aria-expanded="false" aria-label="Toggle navigation">
		            <span class="navbar-toggler-icon"></span>
	            </button>

                <div class="top_menu" style="width: 100%; display: flex; justify-content: space-between;">
		            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
			            <ul class="navbar-nav flex-grow-1">
				            <li class="nav-item">
					            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
				            </li>

							<li class="nav-item text-dark">
					            <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Products</a>
				            </li>

							<li class="nav-item text-dark">
								<a class="nav-link text-dark" asp-controller="ProductFilter" asp-action="index">Product Filter</a>
				            </li>
							
				            @if (User.Identity.IsAuthenticated)
				            {
					            <li class="nav-item">
									<a class="nav-link text-dark js-button_add" href="#">Add new product</a>
					            </li>
				            }

			            </ul>
		            </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between float-end float-right pull-right " style="max-width: 100px;">
			            <ul class="navbar-nav flex-grow-1">
				            <li class="nav-item">
								@{
						            if (User.Identity.IsAuthenticated)
						            {
										<a class="nav-link text-dark" asp-controller="Admin" asp-action="Logout">Logout</a>
						            }
						            else
						            {
							            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Login" >Login</a>

						            }
					            }
				            </li>
			            </ul>
		            </div>
	            </div>
	            
            </div>
        </nav>
    </header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SoftPlex.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


	<style>
		.table_add_product__table {
			width: 100%;
			height: 100%;
		}

			.table_add_product__table .ui-accordion .ui-accordion-content {
				min-height: 220px;
			}

			.table_add_product__table td {
				vertical-align: top;
			}

				.table_add_product__table td.c1 {
					width: 350px;
				}

				.table_add_product__table td.c2 {
					width: 100%;
				}
	</style>
<div id="dialog-form" title="Create new Product">
	<form id="js-add-product" style="display: block;">
			
	</form>
</div>

	<div id="dialog-form__into" style="display: none;">
	<partial name="_PopUpInnerForm" model="null" />
	</div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/vendor/jquery-ui.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
